@model AdmrEmeci.Models.LoginModel

@{
    Layout = "~/Views/Shared/_Account.cshtml";
}

<p class="login-box-msg">Inicia sesi&oacute;n</p>
@using (Html.BeginForm())
{
    <div class="form-group has-feedback">
        @Html.TextBoxFor(x => x.User, null, new { @class = "form-control", @placeholder = "Usuario" })
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
    </div>
    <div class="form-group has-feedback">
        @Html.PasswordFor(x => x.Password, new { @class = "form-control", @placeholder = "Contraseña" })
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
    </div>
    if (!string.IsNullOrEmpty(Model.Error))
    {
        <div class="row">
            <div class="col-xs-12">
                <div class="alert alert-danger fade in alert-dismissible">
                    <strong>!Error¡</strong> @Model.Error
                </div>
            </div>
        </div>
    }
    <div class="row">
        <div class="col-xs-8">
            <div class="checkbox icheck">
                <label>
                    @Html.CheckBoxFor(x => x.RememberMe) Recuerdame
                </label>
            </div>
        </div>
        <!-- /.col -->
        <div class="col-xs-4">
            <button type="submit" class="btn btn-primary btn-block btn-flat">Acceder</button>
        </div>
        <!-- /.col -->
    </div>
}